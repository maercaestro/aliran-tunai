[Unit]
Description=Aliran Tunai WhatsApp Bot
After=network.target

[Service]
Type=simple
User=megat-aliran
WorkingDirectory=/home/megat-aliran/aliran-tunai
Environment=PATH=/home/megat-aliran/aliran-tunai/aliran/bin
ExecStart=/home/megat-aliran/aliran-tunai/aliran/bin/python whatsapp_business_api.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
