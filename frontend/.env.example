# Aliran Tunai - Development Environment Configuration
# Copy this to .env.local and modify as needed

# ===== APP MODE CONFIGURATION =====
# Controls which features are available

# Enable personal budget tracking (new feature)
REACT_APP_ENABLE_PERSONAL_BUDGET=true

# Enable business mode (existing B2B features) 
REACT_APP_ENABLE_BUSINESS=true

# Allow users to switch between modes
REACT_APP_ALLOW_MODE_SWITCHING=true

# Default mode when user first visits ('personal' or 'business')
REACT_APP_DEFAULT_MODE=personal

# ===== PERSONAL BUDGET FEATURES =====
# Control which personal budget features are enabled
# Useful for gradual rollout during development

REACT_APP_ENABLE_EXPENSES=true
REACT_APP_ENABLE_BUDGETS=true
REACT_APP_ENABLE_GOALS=true
REACT_APP_ENABLE_INSIGHTS=true

# ===== WHATSAPP BOT CONFIGURATION =====
# Control bot response modes

REACT_APP_ENABLE_PERSONAL_BOT=true
REACT_APP_ENABLE_BUSINESS_BOT=true

# ===== DEVELOPMENT SETTINGS =====
# These are automatically set based on NODE_ENV

# Show debug information (auto-enabled in development)
# REACT_APP_SHOW_DEBUG_INFO=true

# Allow access to legacy mode (auto-enabled in development)  
# REACT_APP_LEGACY_MODE_ACCESS=true

# ===== API CONFIGURATION =====
# These should match your backend configuration

REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_WHATSAPP_PHONE_NUMBER=YOUR_WHATSAPP_PHONE_NUMBER

# ===== DEPLOYMENT MODES =====
# Example configurations for different deployment scenarios

# Personal Budget Only (for personal budget launch)
# REACT_APP_ENABLE_PERSONAL_BUDGET=true
# REACT_APP_ENABLE_BUSINESS=false
# REACT_APP_ALLOW_MODE_SWITCHING=false
# REACT_APP_DEFAULT_MODE=personal

# Business Only (preserve existing B2B functionality)
# REACT_APP_ENABLE_PERSONAL_BUDGET=false
# REACT_APP_ENABLE_BUSINESS=true
# REACT_APP_ALLOW_MODE_SWITCHING=false
# REACT_APP_DEFAULT_MODE=business

# Full Feature Mode (both modes available)
# REACT_APP_ENABLE_PERSONAL_BUDGET=true
# REACT_APP_ENABLE_BUSINESS=true
# REACT_APP_ALLOW_MODE_SWITCHING=true
# REACT_APP_DEFAULT_MODE=personal