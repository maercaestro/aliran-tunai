# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
OPENAI_API_KEY=your_openai_api_key_here
MONGO_URI=your_mongodb_connection_string_here

# Bot Mode Configuration
# For WEBHOOK mode: Set WEBHOOK_URL to your public domain
# For POLLING mode: Leave WEBHOOK_URL empty or comment it out

# WEBHOOK MODE (Production - requires public HTTPS domain)
WEBHOOK_URL=https://yourdomain.com
WEBHOOK_PORT=8443

# POLLING MODE (Development - just comment out WEBHOOK_URL above)
# WEBHOOK_URL=
# WEBHOOK_PORT=8443

# Note: The bot automatically chooses mode based on WEBHOOK_URL:
# - If WEBHOOK_URL is set: Uses webhook mode
# - If WEBHOOK_URL is empty/unset: Uses polling mode

# ===== PERSONAL BUDGET FEATURES =====
# Feature flags for personal budget vs business mode pivot
ENABLE_PERSONAL_BUDGET=true
ENABLE_BUSINESS=true
DEFAULT_MODE=personal
ALLOW_MODE_SWITCHING=true

# WhatsApp Business API Configuration (for both personal and business modes)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_API_VERSION=v21.0
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here
